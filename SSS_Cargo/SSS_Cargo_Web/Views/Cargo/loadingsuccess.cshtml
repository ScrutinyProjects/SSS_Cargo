@{
    ViewBag.Title = "SSS Cargo - Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Assets/css/jquery-ui.min.css" rel="stylesheet" />

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->

            <div class="panel">
                <div class="panel-body" style="padding: 30px 10px;">
                    <div class="form-group">
                        <input type="hidden" id="hiddenloadingid" value="@ViewBag.LoadingId" />
                        <label class="col-sm-12 control-label" style="text-align: left;font-size: 15px;">Thank you, Loading has been saved successfully. Do you want Print Loading receipt? </label>
                    </div>
                    <div class="form-group" style="padding: 30px 10px;">
                        <button class="btn" onclick="return newloading()">Close & Add new Loading</button>
                        <button class="btn btn-danger" onclick="return printloading()">Print</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/Assets/js/jquery.2.1.1.min.js"></script>
<script src="~/Assets/js/jquery-ui.min.js"></script>
<script type="text/javascript">
    window.jQuery || document.write("<script src='~/Assets/js/jquery.min.js'>" + "<" + "/script>");
</script>
<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='~/Assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
</script>
<script src="~/Assets/js/bootstrap.min.js"></script>
<script type="text/javascript">
    function printloading() {
        window.location = "/cargo/printloadingreceipt/" + $('#hiddenloadingid').val();
    }
    function newloading() {
        window.location = "/cargo/loading";
    }
</script>
