@{
    ViewBag.Title = "SSS Cargo - Delivery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Assets/css/jquery-ui.min.css" rel="stylesheet" />

<div class="page-content">
    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->

            <div class="panel">
                <div class="panel-body" style="padding: 30px 10px;">
                    <div class="form-group">
                        <input type="hidden" id="hdnDeliveryId" value="@ViewBag.DeliveryId" />
                        <label class="col-sm-12 control-label" style="text-align: left;font-size: 15px;">Thank you, Your LR is delivered successfully and  No. is : <span style="text-align: center;font-weight:600" id="spandeliverynumber">@ViewBag.DeliveryId  </span> </label>
                    </div>
                    <div class="form-group" style="padding: 30px 10px;">
                        <button class="btn" onclick="return newdelivery()">Close & Add new Delivery</button>
                        <button class="btn btn-danger" onclick="return printdeliveryconfirmation()">Print</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="~/Assets/js/jquery.2.1.1.min.js"></script>
<script src="~/Assets/js/jquery-ui.min.js"></script>
<script type="text/javascript">
    window.jQuery || document.write("<script src='~/Assets/js/jquery.min.js'>" + "<" + "/script>");
</script>
<script type="text/javascript">
    if ('ontouchstart' in document.documentElement) document.write("<script src='~/Assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
</script>
<script src="~/Assets/js/bootstrap.min.js"></script>
<script type="text/javascript">
    function printdeliveryconfirmation() {
        window.location = "/cargo/printdeliveryreceipt/" + $('#hdnDeliveryId').val();
    }
    function newdelivery() {
        window.location = "/cargo/delivery";
    }
</script>
